{
  "swagger": "2.0",
  "info": {
    "title": "Docs for PostAway API",
    "version": "1.0.0",
    "description": "PostAway API for Social Media Application"
  },
  "host": "localhost:3200",
  "securityDefinitions": {
    "JWT": {
      "in": "header",
      "name": "Authorization",
      "type": "apiKey"
    }
  },
  "paths": {
    "/api/users/signup": {
      "post": {
        "tags": ["Users"],
        "summary": "Signup",
        "description": "Signup on Postaway",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User Personal Information for Create Account",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/users/signin": {
      "post": {
        "tags": ["Users"],
        "summary": "Signin",
        "description": "Signin on Postaway",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User Credentials for Login to Existing Account",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Invalid Credentials !!"
          }
        }
      }
    },
    "/api/posts/get/": {
      "get": {
        "tags": ["Posts"],
        "summary": "Get Posts",
        "description": "User Get all Post",
        "security": [
          {
            "JWT": {}
          }
        ],

        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "UnAuthorize Access"
          }
        }
      }
    },
    "/api/posts/create/": {
      "post": {
        "tags": ["Posts"],
        "summary": "Create Posts",
        "consumes" : "multipart/form-data",
        "description": "User Can Create new Post",
        "security": [
          {
            "JWT": {}
          }
        ],
        "parameters" : [
          {
            "in" : "body",
            "name" : "body",
            "description" : "Post Details",
            "schema" : {
              "type" : "object",
              "properties" : {
                "postDesc" : {
                  "type" : "string"
                },
                "postLocation" : {
                  "type" : "string"
                }
              }
            }
          },
          {
            "in" : "formData",
            "name" : "postURL",
            "type" : "file",
            "description" : "Image for Post"
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "UnAuthorize Access"
          }
        }
      }
    }
  }
}

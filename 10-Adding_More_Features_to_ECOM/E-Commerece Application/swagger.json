{
    "swagger" : "2.0",
    "info" : {
        "version" : "1.0.0",
        "description" : "API for E Commerce Application",
        "title" : "E Commerce API"
    },
    "host" : "localhost:3200",
    "securityDefinitions" : {
        "JWT" : {
            "in" : "header",
            "name" : "Authorization",
            "type" : "APIkey"
        }
    },
    "paths" : {
        "/api/users/login" : {
            "post" : {
                "tags" : ["Users"],
                "summary" : "login",
                "description" : "user login to get token",
                "parameters" : [
                    {
                        "in" : "body",
                        "name" : "body",
                        "description" : "user credentials",
                        "schema" : {
                            "type" : "object",
                            "properties" : {
                                "email" : {
                                    "type" : "string"
                                },
                                "password" : {
                                    "type" : "string"
                                }
                            }
                        }
                    }
                ],
                "responses" : {
                    "200" : {
                        "description" : "OK"
                    },
                    "400" : {
                        "description" : "Invalid Credentials , Please Try Again!!"
                    }
                }
            }
        },
        "/api/products/" : {
            "get" : {
                "tags" : ["Products"],
                "summary" : "get Products",
                "description" : "For Get the All Products",
                
                "security" : [
                    {
                        "JWT" : {}
                    }
                ],
                "responses" : {
                    "200" : {
                        "description" : "OK"
                    },
                    "401" : {
                        "description" : "UnAuthorize Access"
                    }
                }
            }
        }
        
    }
}
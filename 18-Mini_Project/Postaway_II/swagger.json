{
  "openapi": "3.0.0",
  "info": {
    "title": "Docs for Postaway API",
    "description": "API for Social Media Application",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:3200", "description": "Postaway API" }
  ],
  "components": [
    {
      "securitySchemes": {
        "JWT": {
          "type": "apiKey",
          "in": "header",
          "name": "Authorization"
        }
      }
    }
  ],
  "paths": {
    "/api/users/signUp": {
      "post": {
        "tags": ["Users"],
        "summary": "SignUp",
        "requestBody": {
          "required": true,
          "description": "Create Account on Postaway",
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "age": {
                    "type": "integer"
                  },
                  "gender": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "profileImageURL": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created"
          },
          "406": {
            "description": "Not Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}

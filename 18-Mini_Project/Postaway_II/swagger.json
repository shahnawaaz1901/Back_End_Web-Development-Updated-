{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "description": "API for Social Media Application",
    "title": "Docs for Postaway API"
  },
  "host": "localhost:3200",
  "securitySchemes": {
    "JWT": {
      "in": "header",
      "name": "Authorization",
      "type": "apikey"
    }
  },
  "paths": {
    "/api/users/signUp": {
      "post": {
        "tags": ["Users"],
        "summary": "SignUp",
        "description": "Create Account on Postaway",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Create Account on Postaway",
            "schema": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "email": {
                  "type": "string"
                },
                "phone": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                },
                "age": {
                  "type": "number"
                },
                "gender": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successfully Created Resource"
          },
          "406": {
            "description": "Email or Phone Must be Unique"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/signIn": {
      "post": {
        "tags": ["Users"],
        "summary": "SignIn",
        "description": "SignIn into the Postaway",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "SignIn Account on Postaway",
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string"
                },
                "password": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "401": {
            "description": "UnAuthorized Access or Incorrect Password"
          },
          "404": {
            "description": "User not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/forgetPassword/sendOtp/{email}": {},
    "/api/users/forgetPassword/validateOtp/{email}": {},
    "/api/users/changePassword": {},
    "/api/users/signOut": {},
    "/api/users/signOutAll": {}
  }
}

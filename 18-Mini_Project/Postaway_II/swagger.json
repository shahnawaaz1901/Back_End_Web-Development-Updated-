{
  "openapi": "3.0.0",
  "info": {
    "title": "Docs for Postaway API",
    "description": "API for Social Media Application",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:3200", "description": "Postaway API" }
  ],
  "components": [
    {
      "securitySchemes": {
        "cookieAuth": {
          "type": "apiKey",
          "in": "cookie",
          "name": "JWT_Token"
        }
      }
    }
  ],
  "paths": {
    "/api/users/signUp": {
      "post": {
        "tags": ["Users"],
        "summary": "SignUp",
        "requestBody": {
          "required": true,
          "description": "Create Account on Postaway",
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "age": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 100
                  },
                  "gender": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "profileImageURL": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Created"
          },
          "406": {
            "description": "Not Accepted"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/signIn": {
      "post": {
        "tags": ["Users"],
        "summary": "SignIn",
        "requestBody": {
          "required": true,
          "description": "Signin on Postaway",
          "content": {
            "text/plain": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Incorrect Password"
          },
          "404": {
            "description": "User Not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },

    "/api/users/forgetPassword/generateOtp/{email}": {
      "get": {
        "tags": ["Users"],
        "summary": "Generate OTP",
        "description": "Generate OTP for Reset Password",
        "parameters": [
          {
            "in": "path",
            "name": "email",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Email which you want to Reset Password"
          }
        ],
        "responses": {
          "200": { "description": "Otp Sent" },
          "404": { "description": "User Not found" },
          "500": { "description": "Internal Server Error" }
        }
      }
    },
    "/api/users/forgetPassword/validateOtp/{email}": {
      "put": {
        "tags": ["Users"],
        "summary": "Validate Otp",
        "description": "Validate Otp and Reset Password",
        "parameters": [
          {
            "in": "path",
            "name": "email",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "Email which You Recieved Otp and want to Change Password"
          }
        ],
        "responses": {
          "200": {
            "description": "Password Updated"
          },
          "401": {
            "description": "Incorrect Otp"
          },
          "404": {
            "description": "Generate Otp"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/changePassword": {
      "put": {
        "tags": ["Users"],
        "summary": "Change Password",
        "description": "Change Password Using Existing Password",
        "security": [
          {
            "cookieAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "text/plain": {
              "schema": {
                "type": "object",
                "properties": {
                  "currentPassword": {
                    "type": "string"
                  },
                  "updatedPassword": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password Updated Successfully"
          },
          "401": {
            "description": "Incorrect Password"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/signOut": {
      "delete": {
        "tags": ["Users"]
      }
    },
    "/api/users/signOutAll": {
      "delete": {
        "tags": ["Users"]
      }
    }
  }
}

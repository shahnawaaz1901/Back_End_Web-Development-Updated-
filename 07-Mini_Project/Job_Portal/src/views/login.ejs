<link rel="stylesheet" href="/css/login.css" />
<main class="container mt-5">
  <div class="col-8 m-auto ps-1 pt-1 rounded bg-dark">
    <div class="login-content bg-white rounded shadow">
      <div class="text-center bg-white pt-3 mb-3">
        <h1>Login</h1>
      </div>
      <div class="container mt-3 pb-5">
        <form action="/login" method="post">
          <div class="row col-10 g-3 align-items-center m-auto">
            <div class="col-2">
              <label for="email" class="col-form-label">Email</label>
            </div>
            <div class="col-10">
              <input
                type="email"
                id="email"
                class="form-control"
                aria-describedby="passwordHelpInline"
                placeholder="Enter you email"
              />
            </div>
          </div>
          <div class="row col-10 g-3 align-items-center m-auto">
            <div class="col-2">
              <label for="inputPassword6" class="col-form-label"
                >Password</label
              >
            </div>
            <div class="col-10">
              <input
                type="password"
                id="inputPassword6"
                class="form-control"
                aria-describedby="passwordHelpInline"
                placeholder="Enter your password"
              />
            </div>
          </div>
          <div class="row col-10 g-3 align-items-center m-auto mt-3">
            <button class="btn text-light bg-light-pink col-2 ms-2">Login</button>
          </div>
        </form>
        <div class="row col-10 g-3 align-items-center m-auto text-center">
          <div class="content text-end">
            <span>New to Easily ..??</span>
            <span
              ><button
                class="btn btn-outline-success ms-2"
                data-bs-toggle="modal"
                data-bs-target="#ragister"
              >
                Ragister Here
              </button></span
            >
            <div
              class="modal fade"
              id="ragister"
              tabindex="-1"
              aria-labelledby="exampleModalLabel"
              aria-hidden="true"
            >
              <div class="modal-dialog">
                <div class="modal-content">
                  <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">
                      Experience Easily !!
                    </h1>
                    <button
                      type="button"
                      class="btn-close"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    ></button>
                  </div>
                  <div class="modal-body">
                    <form action="/ragister" method="post">
                      <div class="row g-3 mt-2 align-items-center">
                        <div class="col-3">
                          <label for="name" class="col-form-label">Name</label>
                        </div>
                        <div class="col-9">
                          <input
                            type="text"
                            id="name"
                            name="name"
                            class="form-control"
                          />
                        </div>
                      </div>
                      <div class="row g-3 mt-2 align-items-center">
                        <div class="col-3">
                          <label for="email" class="col-form-label"
                            >Email</label
                          >
                        </div>
                        <div class="col-9">
                          <input
                            type="email"
                            id="email"
                            name="email"
                            class="form-control"
                          />
                        </div>
                      </div>
                      <div class="row g-3 mt-2 align-items-center">
                        <div class="col-3">
                          <label for="password" class="col-form-label"
                            >Password</label
                          >
                        </div>
                        <div class="col-9">
                          <input
                            type="password"
                            id="password"
                            class="form-control"
                            name="password"
                          />
                        </div>
                      </div>
                      <button class="btn text-light bg-light-pink col-12 mt-4">
                        Ragister
                      </button>
                    </form>
                  </div>
                  <div class="modal-footer">
                    <span>Already Ragistered..?</span>
                    <span>
                    <button
                      type="button"
                      class="btn btn-outline-success"
                      data-bs-dismiss="modal"
                      aria-label="Close"
                    >Login</button></span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

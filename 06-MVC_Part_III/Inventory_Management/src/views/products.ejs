<%if(locals.lastVisit){%>
  <div class="alert alert-info" role="alert">
    <%= locals.lastVisit %>
  </div>
<%}%>
  <h1>Products</h1>
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Image</th>
        <th scope="col" colspan="2" class="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% products.forEach((product)=>{ %>
        <th><%= product.id %></th>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td scope="col"><%= product.price %></td>
        <td><img src="<%= product.imageURL %>"/></td>
        <td><a href="/update-product/<%= product.id %>" class="btn btn-warning mt-3">Update</a> </td>
        <td><button class="btn btn-danger mt-3" onclick='deleteProduct("<%= product.id %>")'>Delete</button></td>
      </tr>
      <% }) %>
    </tbody>
  </table>
</div>
